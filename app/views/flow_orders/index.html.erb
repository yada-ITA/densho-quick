<p id="notice"><%= notice %></p>

<h1>Listing Flow Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Order</th>
      <th>Project flg</th>
      <th>Dept</th>
      <th>RejectPermission</th>
      <th>FirstToRevertPermission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flow_orders.each do |flow_order| %>
      <tr>
        <td><%= flow_order.order %></td>
        <td><%= flow_order.project_flg %></td>
        <td><%= flow_order.dept.try(:name) %></td>
        <td><%= flow_order.reject_permission %></td>
        <td><%= flow_order.first_to_revert_permission %></td>
        <td><%= link_to 'Show', flow_order %></td>
        <td><%= link_to 'Edit', edit_flow_order_path(flow_order) %></td>
        <td><%= link_to 'Destroy', flow_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

