<p id="notice"><%= notice %></p>

<h1>Listing Flows</h1>

<table>
  <thead>
    <tr>
      <th>Request application</th>
      <th>Order</th>
      <th>Dept</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flows.each do |flow| %>
      <tr>
        <td><%= flow.request_application.try(:id) %></td>
        <td><%= flow.order %></td>
        <td><%= flow.dept.try(:name) %></td>
        <td><%= link_to 'Show', flow %></td>
        <td><%= link_to 'Edit', edit_flow_path(flow) %></td>
        <td><%= link_to 'Destroy', flow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

